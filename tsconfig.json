{
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "es5",
    "declaration": true,
    "lib": ["es2021"],
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "@models": [
        "src/models"
      ],
      "@validations": [
        "src/validations"
      ],
      "@helpers": [
        "src/helpers"
      ],
      "@constants": [
        "src/constants"
      ],
      "@types": [
        "src/types"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}