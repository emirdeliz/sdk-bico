{
  "compilerOptions": {
    "strict": true,
    "lib": [
      "es2022"
    ],
    "module": "ES2022",
    "moduleResolution": "node",
    "target": "ES2015",
    "baseUrl": "./",
    "composite": true,
    "esModuleInterop": true,
    "outFile": "dist/index.d.ts",
    "declaration": true,
    "emitDeclarationOnly": true,
    "paths": {
      "@models": [
        "src/models"
      ],
      "@validations": [
        "src/validations"
      ],
      "@helpers": [
        "src/helpers"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}