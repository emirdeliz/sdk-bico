{
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "es5",
    "baseUrl": "./",
    "paths": {
      "@models": [
        "src/models"
      ],
      "@validations": [
        "src/validations"
      ],
      "@helpers": [
        "src/helpers"
      ],
    }
  },
  "include": [
    "**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}