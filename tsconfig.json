{
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "es5",
    "declaration": true,
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "@models": [
        "src/models"
      ],
      "@validations": [
        "src/validations"
      ],
      "@helpers": [
        "src/helpers"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}